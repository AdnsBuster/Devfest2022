{
  "yaml.schemas": {},
  "json.schemas": [
    {
      "fileMatch": ["data/team.json"],
      "url": "./json_schemas/schema_team.json"
    },
    {
      "fileMatch": ["data/partners.json"],
      "url": "./json_schemas/schema_partners.json"
    },
    {
      "fileMatch": ["data/slots.json"],
      "url": "./json_schemas/schema_slots.json"
    }
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode"
}
